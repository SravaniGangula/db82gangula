extends layout

block content
  h1=title
   - let rabbit=results 
  div(class="container-fluid mt-3")
  div(class="row")
    each ra,index in rabbit
        div(class="col-sm-2" OnClick=`buy(${index})` ) #{ra.Name} - #{ra.Cost} - #{ra.Weight}
    script.
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }    